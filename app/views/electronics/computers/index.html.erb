<% provide(:title, "Computers") %>
<% provide(:meta_description, "Tech specs and history of Paul Bogardâ€™s computers.") %>
<% provide(:admin_actions, format_admin_actions({"Add Computer" => new_electronics_computer_path})) %>

<h1>Computers</h1>

<% if @computers.any? %>

  <div class="electronics-timeline">
    <%= Computer.all_computers_timeline %>
  </div>

  <ul>
    <% @computers.each do |computer| %>
      <li><%= link_to(computer.name, electronics_computer_path(computer)) %></li>
    <% end %>
  </ul>
<% else %>
  <div class="alert alert-info">No computers have been added yet.</div>
<% end %>