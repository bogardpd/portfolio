<% provide(:title, "#{@computer.name} - Computer History") %>
<% provide(:meta_description, "Paul Bogardâ€™s history of parts in his computer #{@computer.name}.") %>
<% provide(:admin_actions, format_admin_actions({"Edit" => edit_electronics_computer_path(@computer)})) %>

<h1>Computer History &ndash; <%= @computer.name %></h1>

<p class="computer-history-model"><%= @computer.model %> &middot; <%= @computer.form_factor %></p>

<%= MarkdownText.parse(@computer.description) %>

<div class="center">
  <%= @computer.timeline %>
</div>

<%= link_header("Parts", 2) %>

<% if @uses.any? %>
  <table class="table">
    <thead>
      <th>Part</th>
      <th>Start Use Date</th>
      <th>End Use Date</th>
    </thead>
    <tbody>
      <% @uses.each do |use| %>
        <tr>
          <td>
            <% if use.part %>
              <%= link_to(use.part.name_and_model, electronics_part_path(use.part)) %>
            <% end %>
          </td>
          <td><%= use.start_date %></td>
          <td><%= use.end_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>