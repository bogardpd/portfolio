<% provide(:title, "Edit Terminal Silhouette")%>
<% provide(:button_text, "Edit terminal silhouette")%>

<h1>Edit Terminal Silhouette</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= render 'form' %>
  </div>
</div>

<hr />

<div class="row center">
  <div class="col-md-8 col-md-offset-2">
    <%= link_to "<span class=\"glyphicon glyphicon-trash\"></span> Delete this terminal silhouette".html_safe, @terminal, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete #{@terminal.iata_code}?" }, role: "button" %>
  </div>
</div>