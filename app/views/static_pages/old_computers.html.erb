<% provide(:title, "Old Computers")%>
<% provide(:meta_description, "Paul Bogard’s old computers.")%>

<h1>Paul’s Old Computers</h1>

<%= link_buttons(LinkButton.new("See Paul’s current computers", nil, computers_path)) %>

<%= link_header "Desktops", 2 %>

<%= render partial: "computer_summary", collection: @computers["desktops"], as: :computer %>

<div class="container">
  <p class="alert alert-info">Current desktop: <%= link_to "Pancake", computers_path(anchor: "home-computers") %></p>
</div>

<%= link_header "Laptops", 2 %>

<%= render partial: "computer_summary", collection: @computers["laptops"], as: :computer %>

<div class="container">
  <p class="alert alert-info">Current laptop: <%= link_to "Quesadilla", computers_path(anchor: "home-computers") %></p>
</div>

<%= link_header "Mobile Devices", 2 %>

<%= render partial: "computer_summary", collection: @computers["mobile"], as: :computer %>

<div class="container">
  <p class="alert alert-info">Current smartphone: <%= link_to "Tator Tot VI", computers_path(anchor: "mobile") %></p>
  <p class="alert alert-info">Current tablet: <%= link_to "Latke", computers_path(anchor: "mobile") %></p>
</div>

<%= link_header "Gaming Consoles", 2 %>

<%= render partial: "computer_summary", collection: @computers["gaming_consoles"], as: :computer %>

<%= link_buttons(LinkButton.new("See Paul’s current computers", nil, computers_path)) %>