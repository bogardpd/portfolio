<% html = [] %>
<% html.push %Q(<div class="punch"></div>) %>
<% html.push image_tag(image_path("pax-logo.svg"), alt: "PAX Logo", class: %w(img-fluid logo)) %>
<% html.push %Q(<p class="event">#{pax.event}</p>) %>
<% html.push %Q(<p class="year">#{pax.year}</p>) %>
<% html.push %Q(<p class="date">#{pax.dates}</p>) %>
<% html.push %Q(<p class="location">#{pax.location}</p>) %>

<div class="tile pax-tile <%= pax.theme %>">
  <%= link_to html.join("").html_safe, polymorphic_url(:pax_gallery, gallery: pax.parameterized_name), class: "btn btn-link btn-block tile" %>
</div>