<div class="row stephenvlog">
  <div class="col-md-5 thumbnail">
    <%= link_to(image_tag("https://img.youtube.com/vi/#{video.youtube_id}/mqdefault.jpg", class: ["img-fluid", "m-1"]), "https://www.youtube.com/watch?v=#{video.youtube_id}", target: :_blank) %>
  </div>
  <div class="col-md-7 details">
    <h3><%= link_to(video.title, "https://www.youtube.com/watch?v=#{video.youtube_id}") %></h3>
    <%= format_details(video.details) %>
    <%= format_tags(video.tags) %>
    <% if @edit_links %>
      <div class="video-options">
        <%= link_to("Edit video", edit_vlog_video_path(video), class: "btn btn-theme w-100", role: "button") %>
      </div>
    <% end %>
  </div>
</div>