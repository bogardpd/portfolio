<% provide(:title, "Edit StephenVlog Tag (#{@vlog_video_tag.name})") %>
<% provide(:theme, "stephenvlog") %>
<% provide(:button_text, "Edit tag")%>

<h1>Edit StephenVlog Tag</h1>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= render "form" %>
  </div>
</div>

<div class="row center">
  <div class="col-md-8 offset-md-2">
    <%= link_to "Delete this tag", @vlog_video_tag, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete tag [#{@vlog_video_tag.name}]?" }, role: "button" %>
  </div>
</div>